{
  "name": "ui-ui-color-palette",
  "version": "1.6.5",
  "private": true,
  "description": "A unified UI component library for color palette functionality across multiple design platforms. This project serves as a common UI foundation that adapts to different platforms (Figma, Penpot, Sketch) while maintaining a consistent experience.",
  "author": "AurÃ©lien Grimaud",
  "license": "MIT",
  "repository": "https://github.com/a-ng-d/ui-ui-color-palette",
  "type": "module",
  "workspaces": [
    "packages/announcements-yelbolt-worker",
    "packages/auth-yelbolt-worker",
    "packages/auth-yelbolt",
    "packages/auth-yelbolt/ui-color-palette"
  ],
  "scripts": {
    "install:ext": "npm install --workspaces",
    "update:ext": "git submodule update --remote --merge",
    "update:figmug": "npm i @a_ng_d/figmug-ui@latest @a_ng_d/figmug-utils@latest",
    "update:uicp": "npm i @a_ng_d/utils-ui-color-palette@latest",
    "start:announcements": "npm run start:8888 -w announcements-yelbolt-worker",
    "start:token": "npm run start:8787 -w auth-yelbolt-worker",
    "start:auth": "npm run dev:uicp -w auth-yelbolt",
    "start:ext": "npm run start:announcements & npm run start:token & npm run start:auth",
    "poststart:announcements": "npm run clean:port:8888",
    "poststart:token": "npm run clean:port:8787",
    "poststart:auth": "npm run clean:port:3000",
    "poststart:ext": "npm run clean:port:8888 & npm run clean:port:8787 & npm run clean:port:3000",
    "start:figma:dark:figma": "PLATFORM=figma COLOR_MODE=dark EDITOR=figma vite --mode development",
    "start:figma:light:figma": "PLATFORM=figma COLOR_MODE=light EDITOR=figma vite --mode development",
    "start:figma:dark:dev": "PLATFORM=figma COLOR_MODE=dark EDITOR=dev vite --mode development",
    "start:figma:light:dev": "PLATFORM=figma COLOR_MODE=light EDITOR=dev vite --mode development",
    "start:penpot:dark:penpot": "PLATFORM=penpot COLOR_MODE=dark EDITOR=penpot vite --mode development",
    "start:penpot:light:penpot": "PLATFORM=penpot COLOR_MODE=light EDITOR=penpot vite --mode development",
    "start:sketch:dark:sketch": "PLATFORM=sketch COLOR_MODE=dark EDITOR=sketch vite --mode development",
    "start:sketch:light:sketch": "PLATFORM=sketch COLOR_MODE=light EDITOR=sketch vite --mode development",
    "typecheck": "npx tsc --noEmit",
    "lint": "npx eslint ./src/** --fix --ext .ts,.tsx .",
    "format": "npx prettier './src' --write",
    "clean:port:8888": "lsof -ti:8888 | xargs kill -9 2>/dev/null || true",
    "clean:port:8787": "lsof -ti:8787 | xargs kill -9 2>/dev/null || true",
    "clean:port:3000": "lsof -ti:3000 | xargs kill -9 2>/dev/null || true"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.10.1",
    "@sentry/vite-plugin": "^3.3.1",
    "@types/chroma-js": "^3.1.1",
    "@types/file-saver": "^2.0.5",
    "@types/mixpanel-browser": "^2.60.0",
    "@types/node": "^22.14.0",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitejs/plugin-react-swc": "^3.8.1",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-react": "^7.25.3",
    "prettier": "^3.2.5",
    "prettier-plugin-css-order": "^2.1.2",
    "typescript": "^5.4.3",
    "vite": "^6.2.5",
    "vite-plugin-environment": "^1.1.3",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "dependencies": {
    "@a_ng_d/figmug-ui": "^1.16.0",
    "@a_ng_d/figmug-utils": "^0.7.1",
    "@a_ng_d/utils-ui-color-palette": "^1.5.10",
    "@nanostores/preact": "^0.5.2",
    "@sentry/react": "^9.27.0",
    "@supabase/supabase-js": "^2.44.2",
    "chroma-js": "^3.1.2",
    "fflate": "^0.8.2",
    "file-saver": "^2.0.5",
    "mixpanel-browser": "^2.65.0",
    "preact": "^10.6.4",
    "react": "npm:@preact/compat",
    "react-dom": "npm:@preact/compat",
    "react-syntax-highlighter": "^15.6.1",
    "uid": "^2.0.2"
  }
}
